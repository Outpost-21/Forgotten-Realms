<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="O21Settings_ForgottenRealms.PatchOperation_SettingActive">
		<settings>
			<li>factionToggle_halforc</li>
		</settings>
		<active Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/PawnKindDef[@Name="PirateBase"]/modExtensions/li[@Class="O21Toolbox.PawnKindExt.DefModExt_ExtendedPawnKind"]/altRaces</xpath>
					<value>
						<li>
							<races>
								<li>O21_Alien_HalfOrc</li>
							</races>
							<weight>1</weight>
						</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/PawnKindDef[@Name="OutlanderBase"]/modExtensions/li[@Class="O21Toolbox.PawnKindExt.DefModExt_ExtendedPawnKind"]/altRaces</xpath>
					<value>
						<li>
							<races>
								<li>O21_Alien_HalfOrc</li>
							</races>
							<weight>1</weight>
						</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/PawnKindDef[@Name="MercenaryBase"]/modExtensions/li[@Class="O21Toolbox.PawnKindExt.DefModExt_ExtendedPawnKind"]/altRaces</xpath>
					<value>
						<li>
							<races>
								<li>O21_Alien_HalfOrc</li>
							</races>
							<weight>1</weight>
						</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/PawnKindDef[@Name="TribalBase"]/modExtensions/li[@Class="O21Toolbox.PawnKindExt.DefModExt_ExtendedPawnKind"]/altRaces</xpath>
					<value>
						<li>
							<races>
								<li>O21_Alien_HalfOrc</li>
							</races>
							<weight>1</weight>
						</li>
					</value>
				</li>
			</operations>
		</active>
	</Operation>

    <Operation Class="O21Settings_ForgottenRealms.PatchOperation_SettingActive">
        <settings>
            <li>raceToggle_halforc</li>
        </settings>
        <inactive Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/AlienRace.RaceSettings[defName="O21_HalfOrc_Settings"]</xpath>
                </li>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ScenarioDef[defName="O21_CrashlandedHalfOrc"]</xpath>
                </li>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ScenarioDef[defName="O21_LostTribeHalfOrc"]</xpath>
                </li>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/FactionDef[defName="O21_HalfOrcPlayerColony"]</xpath>
                </li>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/FactionDef[defName="O21_HalfOrcPlayerTribe"]</xpath>
                </li>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/PawnKindDef[defName="O21_HalfOrc"]</xpath>
                </li>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/PawnKindDef[defName="O21_HalfOrcTribal"]</xpath>
                </li>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/AlienRace.ThingDef_AlienRace[defName="O21_Alien_HalfOrc"]</xpath>
                </li>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="O21_Leather_HalfOrc"]</xpath>
                </li>
            </operations>
		</inactive>
		<active Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Royalty</li>
					</mods>
					<match Class="PatchOperationSequence">
						<success>Always</success>
						<operations>
							<li Class="PatchOperationAdd">
								<xpath>/Defs/FactionDef[defName="Empire"]/permanentEnemyToEveryoneExcept</xpath>
								<value>
									<li>O21_HalfOrcPlayerColony</li>
									<li>O21_HalfOrcPlayerTribe</li>
								</value>
							</li>
						</operations>
					</match>
				</li>
				<li Class="O21Settings_ForgottenRealms.PatchOperation_SettingActive">
					<settings>
						<li>settingToggle_raceIntegration</li>
					</settings>
					<active Class="PatchOperationSequence">
						<success>Always</success>
						<operations>
							<li Class="PatchOperationAdd">
								<xpath>/Defs/PawnKindDef[@Name="PirateBase"]/modExtensions/li[@Class="O21Toolbox.PawnKindExt.DefModExt_ExtendedPawnKind"]/altRaces</xpath>
								<value>
									<li>
										<races>
											<li>O21_Alien_HalfOrc</li>
										</races>
										<weight>2</weight>
									</li>
								</value>
							</li>
							<li Class="PatchOperationAdd">
								<xpath>/Defs/PawnKindDef[@Name="OutlanderBase"]/modExtensions/li[@Class="O21Toolbox.PawnKindExt.DefModExt_ExtendedPawnKind"]/altRaces</xpath>
								<value>
									<li>
										<races>
											<li>O21_Alien_HalfOrc</li>
										</races>
										<weight>2</weight>
									</li>
								</value>
							</li>
							<li Class="PatchOperationAdd">
								<xpath>/Defs/PawnKindDef[@Name="MercenaryBase"]/modExtensions/li[@Class="O21Toolbox.PawnKindExt.DefModExt_ExtendedPawnKind"]/altRaces</xpath>
								<value>
									<li>
										<races>
											<li>O21_Alien_HalfOrc</li>
										</races>
										<weight>2</weight>
									</li>
								</value>
							</li>
							<li Class="PatchOperationAdd">
								<xpath>/Defs/PawnKindDef[@Name="TribalBase"]/modExtensions/li[@Class="O21Toolbox.PawnKindExt.DefModExt_ExtendedPawnKind"]/altRaces</xpath>
								<value>
									<li>
										<races>
											<li>O21_Alien_HalfOrc</li>
										</races>
										<weight>2</weight>
									</li>
								</value>
							</li>
							<li Class="PatchOperationAdd">
								<xpath>/Defs/AlienRace.RaceSettings[defName="O21_FR_SpeciesIntegration"]/startingColonists</xpath>
								<value>
									<li>
										<pawnKindEntries>
											<li>
												<kindDefs>
													<li>O21_HalfOrc</li>
												</kindDefs>
												<chance>1.0</chance>
											</li>
										</pawnKindEntries>
										<factionDefs>
											<li>PlayerColony</li>
										</factionDefs>
									</li>
									<li>
										<pawnKindEntries>
											<li>
												<kindDefs>
													<li>O21_HalfOrcTribal</li>
												</kindDefs>
												<chance>1.0</chance>
											</li>
										</pawnKindEntries>
										<factionDefs>
											<li>PlayerTribe</li>
										</factionDefs>
									</li>
								</value>
							</li>
							<li Class="PatchOperationAdd">
								<xpath>/Defs/AlienRace.RaceSettings[defName="O21_FR_SpeciesIntegration"]/alienwandererkinds</xpath>
								<value>
									<li>
										<pawnKindEntries>
											<li>
												<kindDefs>
													<li>O21_HalfOrc</li>
												</kindDefs>
												<chance>1.0</chance>
											</li>
										</pawnKindEntries>
										<factionDefs>
											<li>PlayerColony</li>
										</factionDefs>
									</li>
									<li>
										<pawnKindEntries>
											<li>
												<kindDefs>
													<li>O21_HalfOrcTribal</li>
												</kindDefs>
												<chance>1.0</chance>
											</li>
										</pawnKindEntries>
										<factionDefs>
											<li>PlayerTribe</li>
										</factionDefs>
									</li>
								</value>
							</li>
						</operations>
					</active>
				</li>
            </operations>
        </active>
    </Operation>

</Patch>