<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <Operation Class="O21Settings_ForgottenRealms.PatchOperation_SettingActive">
        <settings>
            <li>raceToggle_goblin</li>
        </settings>
		<active Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="O21Settings_ForgottenRealms.PatchOperation_OnDemand">
					<source>1.2/OnDemand</source>
					<folders>
						<li>Goblins</li>
					</folders>
				</li>

				<li Class="O21Settings_ForgottenRealms.PatchOperation_SettingActive">
					<settings>
						<li>factionToggle_goblin</li>
					</settings>
					<active Class="O21Settings_ForgottenRealms.PatchOperation_OnDemand">
						<source>1.2/OnDemand</source>
						<folders>
							<li>Goblins_NPC</li>
						</folders>
					</active>
				</li>

				<li Class="O21Settings_ForgottenRealms.PatchOperation_SettingActive">
					<settings>
						<li>settingToggle_scenarios</li>
					</settings>
					<active Class="O21Settings_ForgottenRealms.PatchOperation_OnDemand">
						<source>1.2/OnDemand</source>
						<folders>
							<li>Goblins_Scenario</li>
						</folders>
					</active>
				</li>
				
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Royalty</li>
					</mods>
					<match Class="PatchOperationSequence">
						<success>Always</success>
						<operations>
							<li Class="PatchOperationAdd">
								<xpath>/Defs/FactionDef[defName="Empire"]/permanentEnemyToEveryoneExcept</xpath>
								<value>
									<li>O21_GoblinPlayerColony</li>
									<li>O21_GoblinPlayerTribe</li>
								</value>
							</li>
						</operations>
					</match>
				</li>
				<li Class="O21Settings_ForgottenRealms.PatchOperation_SettingActive">
					<settings>
						<li>settingToggle_raceIntegration</li>
					</settings>
					<active Class="PatchOperationSequence">
						<success>Always</success>
						<operations>
							<li Class="PatchOperationAdd">
								<xpath>/Defs/PawnKindDef[@Name="PirateBase"]/modExtensions/li[@Class="O21Toolbox.PawnKindExt.DefModExt_ExtendedPawnKind"]/altRaces</xpath>
								<value>
									<li>
										<races>
											<li>O21_Alien_Goblin</li>
										</races>
										<weight>2</weight>
									</li>
								</value>
							</li>
							<li Class="PatchOperationAdd">
								<xpath>/Defs/PawnKindDef[@Name="OutlanderBase"]/modExtensions/li[@Class="O21Toolbox.PawnKindExt.DefModExt_ExtendedPawnKind"]/altRaces</xpath>
								<value>
									<li>
										<races>
											<li>O21_Alien_Goblin</li>
										</races>
										<weight>2</weight>
									</li>
								</value>
							</li>
							<li Class="PatchOperationAdd">
								<xpath>/Defs/PawnKindDef[@Name="MercenaryBase"]/modExtensions/li[@Class="O21Toolbox.PawnKindExt.DefModExt_ExtendedPawnKind"]/altRaces</xpath>
								<value>
									<li>
										<races>
											<li>O21_Alien_Goblin</li>
										</races>
										<weight>2</weight>
									</li>
								</value>
							</li>
							<li Class="PatchOperationAdd">
								<xpath>/Defs/PawnKindDef[@Name="TribalBase"]/modExtensions/li[@Class="O21Toolbox.PawnKindExt.DefModExt_ExtendedPawnKind"]/altRaces</xpath>
								<value>
									<li>
										<races>
											<li>O21_Alien_Goblin</li>
										</races>
										<weight>2</weight>
									</li>
								</value>
							</li>
							<li Class="PatchOperationAdd">
								<xpath>/Defs/AlienRace.RaceSettings[defName="O21_FR_SpeciesIntegration"]/startingColonists</xpath>
								<value>
									<li>
										<pawnKindEntries>
											<li>
												<kindDefs>
													<li>O21_Goblin</li>
												</kindDefs>
												<chance>1.0</chance>
											</li>
										</pawnKindEntries>
										<factionDefs>
											<li>PlayerColony</li>
										</factionDefs>
									</li>
									<li>
										<pawnKindEntries>
											<li>
												<kindDefs>
													<li>O21_GoblinTribal</li>
												</kindDefs>
												<chance>1.0</chance>
											</li>
										</pawnKindEntries>
										<factionDefs>
											<li>PlayerTribe</li>
										</factionDefs>
									</li>
								</value>
							</li>
							<li Class="PatchOperationAdd">
								<xpath>/Defs/AlienRace.RaceSettings[defName="O21_FR_SpeciesIntegration"]/alienwandererkinds</xpath>
								<value>
									<li>
										<pawnKindEntries>
											<li>
												<kindDefs>
													<li>O21_Goblin</li>
												</kindDefs>
												<chance>1.0</chance>
											</li>
										</pawnKindEntries>
										<factionDefs>
											<li>PlayerColony</li>
										</factionDefs>
									</li>
									<li>
										<pawnKindEntries>
											<li>
												<kindDefs>
													<li>O21_GoblinTribal</li>
												</kindDefs>
												<chance>1.0</chance>
											</li>
										</pawnKindEntries>
										<factionDefs>
											<li>PlayerTribe</li>
										</factionDefs>
									</li>
								</value>
							</li>
						</operations>
					</active>
				</li>
            </operations>
        </active>
    </Operation>

</Patch>