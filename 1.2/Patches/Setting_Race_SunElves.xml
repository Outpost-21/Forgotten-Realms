<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <Operation Class="O21Settings_ForgottenRealms.PatchOperation_SettingActive">
        <settings>
            <li>factionToggle_elfSun</li>
        </settings>
        <inactive Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/FactionDef[defName="O21_SunElfKingdoms"]</xpath>
                </li>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/PawnKindDef[defName="O21_ElvenSettlements_Peasant_Sun"]</xpath>
                </li>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/PawnKindDef[defName="O21_ElvenSettlements_Merchant_Sun"]</xpath>
                </li>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/PawnKindDef[defName="O21_ElvenSettlements_Squire_Sun"]</xpath>
                </li>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/PawnKindDef[defName="O21_ElvenSettlements_Footsoldier_Sun"]</xpath>
                </li>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/PawnKindDef[defName="O21_ElvenSettlements_Bowman_Sun"]</xpath>
                </li>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/PawnKindDef[defName="O21_ElvenSettlements_Knight_Sun"]</xpath>
                </li>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/PawnKindDef[defName="O21_ElvenSettlements_Lord_Sun"]</xpath>
                </li>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/PawnKindDef[@Name="O21_ElvenSettlementPawnBase_Sun"]</xpath>
                </li>
            </operations>
        </inactive>
    </Operation>

    <Operation Class="O21Settings_ForgottenRealms.PatchOperation_SettingActive">
        <settings>
            <li>raceToggle_elfSun</li>
        </settings>
        <inactive Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/AlienRace.RaceSettings[defName="O21_SunElf_Settings"]</xpath>
                </li>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ScenarioDef[defName="O21_MedivalSunElves"]</xpath>
                </li>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/FactionDef[defName="O21_SunElfPlayerColony"]</xpath>
                </li>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/FactionDef[defName="O21_SunElfPlayerTribe"]</xpath>
                </li>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/PawnKindDef[defName="O21_SunElfColonist"]</xpath>
                </li>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/PawnKindDef[defName="O21_SunElfTribal"]</xpath>
                </li>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/AlienRace.ThingDef_AlienRace[defName="O21_Alien_SunElf"]</xpath>
                </li>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="O21_Leather_SunElf"]</xpath>
                </li>
            </operations>
		</inactive>
		<active Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Royalty</li>
					</mods>
					<match Class="PatchOperationSequence">
						<success>Always</success>
						<operations>
							<li Class="PatchOperationAdd">
								<xpath>/Defs/FactionDef[defName="Empire"]/permanentEnemyToEveryoneExcept</xpath>
								<value>
									<li>O21_SunElfPlayerColony</li>
									<li>O21_SunElfPlayerTribe</li>
								</value>
							</li>
						</operations>
					</match>
				</li>
				<li Class="O21Settings_ForgottenRealms.PatchOperation_SettingActive">
					<settings>
						<li>settingToggle_raceIntegration</li>
					</settings>
					<active Class="PatchOperationSequence">
						<success>Always</success>
						<operations>
							<li Class="PatchOperationAdd">
								<xpath>/Defs/PawnKindDef[@Name="PirateBase"]/modExtensions/li[@Class="O21Toolbox.PawnKindExt.DefModExt_ExtendedPawnKind"]/altRaces</xpath>
								<value>
									<li>
										<races>
											<li>O21_Alien_SunElf</li>
										</races>
										<weight>2</weight>
									</li>
								</value>
							</li>
							<li Class="PatchOperationAdd">
								<xpath>/Defs/PawnKindDef[@Name="OutlanderBase"]/modExtensions/li[@Class="O21Toolbox.PawnKindExt.DefModExt_ExtendedPawnKind"]/altRaces</xpath>
								<value>
									<li>
										<races>
											<li>O21_Alien_SunElf</li>
										</races>
										<weight>2</weight>
									</li>
								</value>
							</li>
							<li Class="PatchOperationAdd">
								<xpath>/Defs/PawnKindDef[@Name="MercenaryBase"]/modExtensions/li[@Class="O21Toolbox.PawnKindExt.DefModExt_ExtendedPawnKind"]/altRaces</xpath>
								<value>
									<li>
										<races>
											<li>O21_Alien_SunElf</li>
										</races>
										<weight>2</weight>
									</li>
								</value>
							</li>
							<li Class="PatchOperationAdd">
								<xpath>/Defs/PawnKindDef[@Name="TribalBase"]/modExtensions/li[@Class="O21Toolbox.PawnKindExt.DefModExt_ExtendedPawnKind"]/altRaces</xpath>
								<value>
									<li>
										<races>
											<li>O21_Alien_SunElf</li>
										</races>
										<weight>2</weight>
									</li>
								</value>
							</li>
							<li Class="PatchOperationAdd">
								<xpath>/Defs/AlienRace.RaceSettings[defName="O21_FR_SpeciesIntegration"]/startingColonists</xpath>
								<value>
									<li>
										<pawnKindEntries>
											<li>
												<kindDefs>
													<li>O21_SunElfColonist</li>
												</kindDefs>
												<chance>1.0</chance>
											</li>
										</pawnKindEntries>
										<factionDefs>
											<li>PlayerColony</li>
										</factionDefs>
									</li>
									<li>
										<pawnKindEntries>
											<li>
												<kindDefs>
													<li>O21_SunElfTribal</li>
												</kindDefs>
												<chance>1.0</chance>
											</li>
										</pawnKindEntries>
										<factionDefs>
											<li>PlayerTribe</li>
										</factionDefs>
									</li>
								</value>
							</li>
							<li Class="PatchOperationAdd">
								<xpath>/Defs/AlienRace.RaceSettings[defName="O21_FR_SpeciesIntegration"]/alienwandererkinds</xpath>
								<value>
									<li>
										<pawnKindEntries>
											<li>
												<kindDefs>
													<li>O21_SunElfColonist</li>
												</kindDefs>
												<chance>1.0</chance>
											</li>
										</pawnKindEntries>
										<factionDefs>
											<li>PlayerColony</li>
										</factionDefs>
									</li>
									<li>
										<pawnKindEntries>
											<li>
												<kindDefs>
													<li>O21_SunElfTribal</li>
												</kindDefs>
												<chance>1.0</chance>
											</li>
										</pawnKindEntries>
										<factionDefs>
											<li>PlayerTribe</li>
										</factionDefs>
									</li>
								</value>
							</li>
						</operations>
					</active>
				</li>
            </operations>
        </active>
    </Operation>

</Patch>