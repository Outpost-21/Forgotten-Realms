<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <Operation Class="O21Settings_ForgottenRealms.PatchOperation_SettingActive">
        <settings>
            <li>factionToggle_gith</li>
        </settings>
        <inactive Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/FactionDef[defName="O21_GithTribes"]</xpath>
                </li>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/PawnKindDef[defName="O21_GithTribes_Peasant"]</xpath>
                </li>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/PawnKindDef[defName="O21_GithTribes_Merchant"]</xpath>
                </li>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/PawnKindDef[defName="O21_GithTribes_Fighter"]</xpath>
                </li>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/PawnKindDef[defName="O21_GithTribes_Warrior"]</xpath>
                </li>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/PawnKindDef[defName="O21_GithTribes_Bowman"]</xpath>
                </li>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/PawnKindDef[defName="O21_GithTribes_Champion"]</xpath>
                </li>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/PawnKindDef[defName="O21_GithTribes_Chief"]</xpath>
                </li>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/PawnKindDef[@Name="O21_GithTribePawnBase"]</xpath>
                </li>
            </operations>
        </inactive>
    </Operation>

    <Operation Class="O21Settings_ForgottenRealms.PatchOperation_SettingActive">
        <settings>
            <li>raceToggle_gith</li>
        </settings>
        <inactive Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/AlienRace.RaceSettings[defName="Gith_Settings"]</xpath>
                </li>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ScenarioDef[defName="O21_CrashlandedGith"]</xpath>
                </li>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ScenarioDef[defName="O21_LostTribeGith"]</xpath>
                </li>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/FactionDef[defName="O21_GithPlayerColony"]</xpath>
                </li>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/FactionDef[defName="O21_GithPlayerTribe"]</xpath>
                </li>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/PawnKindDef[defName="O21_Gith"]</xpath>
                </li>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/PawnKindDef[defName="O21_GithTribal"]</xpath>
                </li>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/AlienRace.ThingDef_AlienRace[defName="O21_Alien_Gith"]</xpath>
                </li>
                <li Class="PatchOperationRemove">
                    <xpath>/Defs/ThingDef[defName="O21_Leather_Gith"]</xpath>
                </li>
            </operations>
		</inactive>
		<active Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Royalty</li>
					</mods>
					<match Class="PatchOperationSequence">
						<success>Always</success>
						<operations>
							<li Class="PatchOperationAdd">
								<xpath>/Defs/FactionDef[defName="Empire"]/permanentEnemyToEveryoneExcept</xpath>
								<value>
									<li>O21_GithPlayerColony</li>
									<li>O21_GithPlayerTribe</li>
								</value>
							</li>
						</operations>
					</match>
				</li>
				<li Class="O21Settings_ForgottenRealms.PatchOperation_SettingActive">
					<settings>
						<li>settingToggle_raceIntegration</li>
					</settings>
					<active Class="PatchOperationSequence">
						<success>Always</success>
						<operations>
							<li Class="PatchOperationAdd">
								<xpath>/Defs/PawnKindDef[@Name="PirateBase"]/modExtensions/li[@Class="O21Toolbox.PawnKindExt.DefModExt_ExtendedPawnKind"]/altRaces</xpath>
								<value>
									<li>
										<races>
											<li>O21_Alien_Gith</li>
										</races>
										<weight>2</weight>
									</li>
								</value>
							</li>
							<li Class="PatchOperationAdd">
								<xpath>/Defs/PawnKindDef[@Name="OutlanderBase"]/modExtensions/li[@Class="O21Toolbox.PawnKindExt.DefModExt_ExtendedPawnKind"]/altRaces</xpath>
								<value>
									<li>
										<races>
											<li>O21_Alien_Gith</li>
										</races>
										<weight>2</weight>
									</li>
								</value>
							</li>
							<li Class="PatchOperationAdd">
								<xpath>/Defs/PawnKindDef[@Name="MercenaryBase"]/modExtensions/li[@Class="O21Toolbox.PawnKindExt.DefModExt_ExtendedPawnKind"]/altRaces</xpath>
								<value>
									<li>
										<races>
											<li>O21_Alien_Gith</li>
										</races>
										<weight>2</weight>
									</li>
								</value>
							</li>
							<li Class="PatchOperationAdd">
								<xpath>/Defs/PawnKindDef[@Name="TribalBase"]/modExtensions/li[@Class="O21Toolbox.PawnKindExt.DefModExt_ExtendedPawnKind"]/altRaces</xpath>
								<value>
									<li>
										<races>
											<li>O21_Alien_Gith</li>
										</races>
										<weight>2</weight>
									</li>
								</value>
							</li>
							<li Class="PatchOperationAdd">
								<xpath>/Defs/AlienRace.RaceSettings[defName="O21_FR_SpeciesIntegration"]/startingColonists</xpath>
								<value>
									<li>
										<pawnKindEntries>
											<li>
												<kindDefs>
													<li>O21_Gith</li>
												</kindDefs>
												<chance>1.0</chance>
											</li>
										</pawnKindEntries>
										<factionDefs>
											<li>PlayerColony</li>
										</factionDefs>
									</li>
									<li>
										<pawnKindEntries>
											<li>
												<kindDefs>
													<li>O21_GithTribal</li>
												</kindDefs>
												<chance>1.0</chance>
											</li>
										</pawnKindEntries>
										<factionDefs>
											<li>PlayerTribe</li>
										</factionDefs>
									</li>
								</value>
							</li>
							<li Class="PatchOperationAdd">
								<xpath>/Defs/AlienRace.RaceSettings[defName="O21_FR_SpeciesIntegration"]/alienwandererkinds</xpath>
								<value>
									<li>
										<pawnKindEntries>
											<li>
												<kindDefs>
													<li>O21_Gith</li>
												</kindDefs>
												<chance>1.0</chance>
											</li>
										</pawnKindEntries>
										<factionDefs>
											<li>PlayerColony</li>
										</factionDefs>
									</li>
									<li>
										<pawnKindEntries>
											<li>
												<kindDefs>
													<li>O21_GithTribal</li>
												</kindDefs>
												<chance>1.0</chance>
											</li>
										</pawnKindEntries>
										<factionDefs>
											<li>PlayerTribe</li>
										</factionDefs>
									</li>
								</value>
							</li>
						</operations>
					</active>
				</li>
            </operations>
        </active>
    </Operation>

</Patch>