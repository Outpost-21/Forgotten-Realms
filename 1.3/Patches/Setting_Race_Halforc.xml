<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="ForgottenRealms.PatchOperation_SettingActive">
		<settings>
			<li>raceToggle_halforc</li>
		</settings>
		<active Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="ForgottenRealms.PatchOperation_OnDemand">
					<source>1.3/OnDemand</source>
					<folders>
						<li>HalfOrcs</li>
					</folders>
				</li>
				<li Class="ForgottenRealms.PatchOperation_OnDemand">
					<source>1.3/OnDemand</source>
					<folders>
						<li>HalfOrcs_NPC</li>
					</folders>
				</li>

				<li Class="PatchOperationFindMod">
					<mods>
						<li>Royalty</li>
					</mods>
					<match Class="PatchOperationSequence">
						<success>Always</success>
						<operations>
							<li Class="PatchOperationAdd">
								<xpath>/Defs/FactionDef[defName="Empire"]/permanentEnemyToEveryoneExcept</xpath>
								<value>
									<li>O21_FR_HalfOrcPlayerColony</li>
									<li>O21_FR_HalfOrcPlayerTribe</li>
								</value>
							</li>
						</operations>
					</match>
				</li>
				<li Class="ForgottenRealms.PatchOperation_SettingActive">
					<settings>
						<li>settingToggle_raceIntegration</li>
					</settings>
					<active Class="PatchOperationSequence">
						<success>Always</success>
						<operations>
							<li Class="PatchOperationAdd">
								<xpath>/Defs/PawnKindDef[@Name="PirateBase"]/modExtensions/li[@Class="O21Toolbox.PawnKindExt.DefModExt_ExtendedPawnKind"]/altRaces</xpath>
								<value>
									<li>
										<races>
											<li>O21_FR_HalfOrc</li>
										</races>
										<weight>1</weight>
									</li>
								</value>
							</li>
							<li Class="PatchOperationAdd">
								<xpath>/Defs/PawnKindDef[@Name="OutlanderBase"]/modExtensions/li[@Class="O21Toolbox.PawnKindExt.DefModExt_ExtendedPawnKind"]/altRaces</xpath>
								<value>
									<li>
										<races>
											<li>O21_FR_HalfOrc</li>
										</races>
										<weight>1</weight>
									</li>
								</value>
							</li>
							<li Class="PatchOperationAdd">
								<xpath>/Defs/PawnKindDef[@Name="MercenaryBase"]/modExtensions/li[@Class="O21Toolbox.PawnKindExt.DefModExt_ExtendedPawnKind"]/altRaces</xpath>
								<value>
									<li>
										<races>
											<li>O21_FR_HalfOrc</li>
										</races>
										<weight>1</weight>
									</li>
								</value>
							</li>
							<li Class="PatchOperationAdd">
								<xpath>/Defs/PawnKindDef[@Name="TribalBase"]/modExtensions/li[@Class="O21Toolbox.PawnKindExt.DefModExt_ExtendedPawnKind"]/altRaces</xpath>
								<value>
									<li>
										<races>
											<li>O21_FR_HalfOrc</li>
										</races>
										<weight>1</weight>
									</li>
								</value>
							</li>
							<li Class="PatchOperationAdd">
								<xpath>/Defs/AlienRace.RaceSettings[defName="O21_FR_SpeciesIntegration"]/startingColonists</xpath>
								<value>
									<li>
										<pawnKindEntries>
											<li>
												<kindDefs>
													<li>O21_FR_HalfOrc</li>
												</kindDefs>
												<chance>1.0</chance>
											</li>
										</pawnKindEntries>
										<factionDefs>
											<li>PlayerColony</li>
										</factionDefs>
									</li>
									<li>
										<pawnKindEntries>
											<li>
												<kindDefs>
													<li>O21_FR_HalfOrcTribal</li>
												</kindDefs>
												<chance>1.0</chance>
											</li>
										</pawnKindEntries>
										<factionDefs>
											<li>PlayerTribe</li>
										</factionDefs>
									</li>
								</value>
							</li>
							<li Class="PatchOperationAdd">
								<xpath>/Defs/AlienRace.RaceSettings[defName="O21_FR_SpeciesIntegration"]/alienwandererkinds</xpath>
								<value>
									<li>
										<pawnKindEntries>
											<li>
												<kindDefs>
													<li>O21_FR_HalfOrc</li>
												</kindDefs>
												<chance>1.0</chance>
											</li>
										</pawnKindEntries>
										<factionDefs>
											<li>PlayerColony</li>
										</factionDefs>
									</li>
									<li>
										<pawnKindEntries>
											<li>
												<kindDefs>
													<li>O21_FR_HalfOrcTribal</li>
												</kindDefs>
												<chance>1.0</chance>
											</li>
										</pawnKindEntries>
										<factionDefs>
											<li>PlayerTribe</li>
										</factionDefs>
									</li>
								</value>
							</li>
							<li Class="PatchOperationAddModExtension">
								<xpath>/Defs/PawnKindDef[@Name="O21_FR_OrcTribePawnBase"]</xpath>
								<value>
									<modExtensions>
										<li Class="O21Toolbox.PawnKindExt.DefModExt_ExtendedPawnKind">
											<altRaces>
												<li>
													<races>
														<li>O21_FR_Orc</li>
													</races>
													<weight>20</weight>
												</li>
												<li>
													<races>
														<li>O21_FR_HalfOrc</li>
													</races>
													<weight>1</weight>
												</li>
											</altRaces>
										</li>
									</modExtensions>
								</value>
							</li>
						</operations>
					</active>
				</li>
			</operations>
		</active>
	</Operation>

</Patch>