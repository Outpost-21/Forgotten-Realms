<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <Operation Class="ForgottenRealms.PatchOperation_SettingActive">
        <settings>
            <li>raceToggle_orc</li>
        </settings>
		<active Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="ForgottenRealms.PatchOperation_OnDemand">
					<source>1.3/OnDemand</source>
					<folders>
						<li>Orcs</li>
					</folders>
				</li>
				<li Class="ForgottenRealms.PatchOperation_OnDemand">
					<source>1.3/OnDemand</source>
					<folders>
						<li>Orcs_NPC</li>
					</folders>
				</li>
				
				<li Class="PatchOperationFindMod">
					<mods>
						<li>Royalty</li>
					</mods>
					<match Class="PatchOperationSequence">
						<success>Always</success>
						<operations>
							<li Class="PatchOperationAdd">
								<xpath>/Defs/FactionDef[defName="Empire"]/permanentEnemyToEveryoneExcept</xpath>
								<value>
									<li>O21_FR_OrcPlayerColony</li>
									<li>O21_FR_OrcPlayerTribe</li>
								</value>
							</li>
						</operations>
					</match>
				</li>
				<li Class="ForgottenRealms.PatchOperation_SettingActive">
					<settings>
						<li>settingToggle_raceIntegration</li>
					</settings>
					<active Class="PatchOperationAdd">
						<xpath>/Defs</xpath>
						<value>
							<TabulaRasa.RaceSpawningDef>
								<defName>ForgottenRealms_RaceSpawning_Orcs</defName>
								<races>
									<li>O21_FR_Orc</li>
								</races>
								<factions>
									<!-- Vanilla Factions -->
									<li>Ancients</li>
									<li>AncientsHostile</li>
									<li>OutlanderCivil</li>
									<li>OutlanderRough</li>
									<li>TribeCivil</li>
									<li>TribeRough</li>
									<li>TribeSavage</li>
									<li>Pirate</li>
									<!-- Royalty -->
									<li MayRequire="Ludeon.RimWorld.Royalty">Empire</li>
									<li MayRequire="Ludeon.RimWorld.Royalty">OutlanderRefugee</li>
									<!-- Ideology -->
									<li MayRequire="Ludeon.RimWorld.Ideology">Beggars</li>
									<li MayRequire="Ludeon.RimWorld.Ideology">TribeCannibal</li>
									<li MayRequire="Ludeon.RimWorld.Ideology">NudistTribe</li>
									<li MayRequire="Ludeon.RimWorld.Ideology">CannibalPirate</li>
									<li MayRequire="Ludeon.RimWorld.Ideology">Pilgrims</li>
								</factions>
								<weight>80</weight>
							</TabulaRasa.RaceSpawningDef>
						</value>
					</active>
				</li>
            </operations>
        </active>
    </Operation>

</Patch>