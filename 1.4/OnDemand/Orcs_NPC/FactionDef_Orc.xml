<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
	<FactionDef ParentName="FRealms_ForgottenSettlementBase">
        <defName>FRealms_OrcTribes</defName>
        <label>Orc settlements</label>
        <description>The collective settlements of Orcs in this realm.</description>
        <colorSpectrum>
            <li>(153, 135, 104)</li>
        </colorSpectrum>
		<pawnSingular>Orc</pawnSingular>
		<pawnsPlural>Orc</pawnsPlural>
		<leaderTitle>chief</leaderTitle>
		<factionIconPath>World/Orc/OrcTribeIcon</factionIconPath>
		<pawnGroupMakers>
            <li>
                <!-- Normal fights, ranged with melee mix-ins -->
                <kindDef>Combat</kindDef>
                <commonality>100</commonality>
                <options>
                    <FRealms_OrcTribes_Peasant>20</FRealms_OrcTribes_Peasant>
                    <FRealms_OrcTribes_Fighter>40</FRealms_OrcTribes_Fighter>
                    <FRealms_OrcTribes_Warrior>30</FRealms_OrcTribes_Warrior>
                    <FRealms_OrcTribes_Bowman>30</FRealms_OrcTribes_Bowman>
                    <FRealms_OrcTribes_Champion>30</FRealms_OrcTribes_Champion>
                    <FRealms_OrcTribes_Chief>10</FRealms_OrcTribes_Chief>
                </options>
            </li>
            <li>
                <!-- Normal fights, ranged only -->
                <kindDef>Combat</kindDef>
                <commonality>60</commonality>
                <options>
                    <FRealms_OrcTribes_Bowman>100</FRealms_OrcTribes_Bowman>
                </options>
            </li>
            <li>
                <!-- Normal fights, melee only -->
                <kindDef>Combat</kindDef>
                <commonality>60</commonality>
                <options>
                    <FRealms_OrcTribes_Peasant>15</FRealms_OrcTribes_Peasant>
                    <FRealms_OrcTribes_Fighter>40</FRealms_OrcTribes_Fighter>
                    <FRealms_OrcTribes_Warrior>40</FRealms_OrcTribes_Warrior>
                    <FRealms_OrcTribes_Champion>30</FRealms_OrcTribes_Champion>
                    <FRealms_OrcTribes_Chief>5</FRealms_OrcTribes_Chief>
                </options>
            </li>
            <li>
                <!-- Peaceful -->
                <kindDef>Peaceful</kindDef>
                <options>
                    <FRealms_OrcTribes_Fighter>30</FRealms_OrcTribes_Fighter>
                    <FRealms_OrcTribes_Warrior>30</FRealms_OrcTribes_Warrior>
                    <FRealms_OrcTribes_Bowman>30</FRealms_OrcTribes_Bowman>
                    <FRealms_OrcTribes_Champion>20</FRealms_OrcTribes_Champion>
                    <FRealms_OrcTribes_Chief>10</FRealms_OrcTribes_Chief>
                </options>
            </li>
            <li>
                <kindDef>Trader</kindDef>
                <traders>
                    <FRealms_OrcTribes_Merchant>1</FRealms_OrcTribes_Merchant>
                </traders>
                <carriers>
                    <Muffalo>6</Muffalo>
                    <Dromedary>5</Dromedary>
                    <Alpaca>2.5</Alpaca>
                    <Elephant>2</Elephant>
                </carriers>
                <guards>
                    <FRealms_OrcTribes_Fighter>30</FRealms_OrcTribes_Fighter>
                    <FRealms_OrcTribes_Warrior>30</FRealms_OrcTribes_Warrior>
                    <FRealms_OrcTribes_Bowman>30</FRealms_OrcTribes_Bowman>
                    <FRealms_OrcTribes_Champion>20</FRealms_OrcTribes_Champion>
                </guards>
            </li>
            <li>
                <kindDef>Settlement</kindDef>
                <options>
                    <FRealms_OrcTribes_Peasant>20</FRealms_OrcTribes_Peasant>
                    <FRealms_OrcTribes_Fighter>20</FRealms_OrcTribes_Fighter>
                    <FRealms_OrcTribes_Warrior>20</FRealms_OrcTribes_Warrior>
                    <FRealms_OrcTribes_Bowman>50</FRealms_OrcTribes_Bowman>
                    <FRealms_OrcTribes_Champion>30</FRealms_OrcTribes_Champion>
                    <FRealms_OrcTribes_Chief>50</FRealms_OrcTribes_Chief>
                </options>
            </li>
		</pawnGroupMakers>
	</FactionDef>

</Defs>