<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
	<FactionDef ParentName="FRealms_ForgottenSettlementBase">
        <defName>FRealms_DwarfTribes</defName>
        <label>Dwarf settlements</label>
        <description>The collective settlements of Dwarf in this realm.</description>
        <colorSpectrum>
            <li>(232, 201, 116)</li>
        </colorSpectrum>
		<pawnSingular>Dwarf</pawnSingular>
		<pawnsPlural>Dwarf</pawnsPlural>
		<leaderTitle>chief</leaderTitle>
		<factionIconPath>World/Dwarf/DwarfTribeIcon</factionIconPath>
		<pawnGroupMakers>
            <li>
                <!-- Normal fights, ranged with melee mix-ins -->
                <kindDef>Combat</kindDef>
                <commonality>100</commonality>
                <options>
                    <FRealms_DwarfTribes_Peasant>20</FRealms_DwarfTribes_Peasant>
                    <FRealms_DwarfTribes_Fighter>40</FRealms_DwarfTribes_Fighter>
                    <FRealms_DwarfTribes_Warrior>30</FRealms_DwarfTribes_Warrior>
                    <FRealms_DwarfTribes_Bowman>30</FRealms_DwarfTribes_Bowman>
                    <FRealms_DwarfTribes_Champion>30</FRealms_DwarfTribes_Champion>
                    <FRealms_DwarfTribes_Chief>10</FRealms_DwarfTribes_Chief>
                </options>
            </li>
            <li>
                <!-- Normal fights, ranged only -->
                <kindDef>Combat</kindDef>
                <commonality>60</commonality>
                <options>
                    <FRealms_DwarfTribes_Bowman>100</FRealms_DwarfTribes_Bowman>
                </options>
            </li>
            <li>
                <!-- Normal fights, melee only -->
                <kindDef>Combat</kindDef>
                <commonality>60</commonality>
                <options>
                    <FRealms_DwarfTribes_Peasant>15</FRealms_DwarfTribes_Peasant>
                    <FRealms_DwarfTribes_Fighter>40</FRealms_DwarfTribes_Fighter>
                    <FRealms_DwarfTribes_Warrior>40</FRealms_DwarfTribes_Warrior>
                    <FRealms_DwarfTribes_Champion>30</FRealms_DwarfTribes_Champion>
                    <FRealms_DwarfTribes_Chief>5</FRealms_DwarfTribes_Chief>
                </options>
            </li>
            <li>
                <!-- Peaceful -->
                <kindDef>Peaceful</kindDef>
                <options>
                    <FRealms_DwarfTribes_Fighter>30</FRealms_DwarfTribes_Fighter>
                    <FRealms_DwarfTribes_Warrior>30</FRealms_DwarfTribes_Warrior>
                    <FRealms_DwarfTribes_Bowman>30</FRealms_DwarfTribes_Bowman>
                    <FRealms_DwarfTribes_Champion>20</FRealms_DwarfTribes_Champion>
                    <FRealms_DwarfTribes_Chief>10</FRealms_DwarfTribes_Chief>
                </options>
            </li>
            <li>
                <kindDef>Trader</kindDef>
                <traders>
                    <FRealms_DwarfTribes_Merchant>1</FRealms_DwarfTribes_Merchant>
                </traders>
                <carriers>
                    <Muffalo>6</Muffalo>
                    <Dromedary>5</Dromedary>
                    <Alpaca>2.5</Alpaca>
                    <Elephant>2</Elephant>
                </carriers>
                <guards>
                    <FRealms_DwarfTribes_Fighter>30</FRealms_DwarfTribes_Fighter>
                    <FRealms_DwarfTribes_Warrior>30</FRealms_DwarfTribes_Warrior>
                    <FRealms_DwarfTribes_Bowman>30</FRealms_DwarfTribes_Bowman>
                    <FRealms_DwarfTribes_Champion>20</FRealms_DwarfTribes_Champion>
                </guards>
            </li>
            <li>
                <kindDef>Settlement</kindDef>
                <options>
                    <FRealms_DwarfTribes_Peasant>20</FRealms_DwarfTribes_Peasant>
                    <FRealms_DwarfTribes_Fighter>20</FRealms_DwarfTribes_Fighter>
                    <FRealms_DwarfTribes_Warrior>20</FRealms_DwarfTribes_Warrior>
                    <FRealms_DwarfTribes_Bowman>50</FRealms_DwarfTribes_Bowman>
                    <FRealms_DwarfTribes_Champion>30</FRealms_DwarfTribes_Champion>
                    <FRealms_DwarfTribes_Chief>50</FRealms_DwarfTribes_Chief>
                </options>
            </li>
		</pawnGroupMakers>
	</FactionDef>

</Defs>