<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
	<FactionDef ParentName="FRealms_ForgottenSettlementBase">
        <defName>FRealms_HalflingTribes</defName>
        <label>Halfling settlements</label>
        <description>The collective settlements of Halflings in this realm.</description>
        <colorSpectrum>
            <li>(217, 144, 85)</li>
        </colorSpectrum>
		<pawnSingular>Halfling</pawnSingular>
		<pawnsPlural>Halflings</pawnsPlural>
		<leaderTitle>chief</leaderTitle>
		<factionIconPath>World/Halfling/HalflingTribeIcon</factionIconPath>
		<pawnGroupMakers>
            <li>
                <!-- Normal fights, ranged with melee mix-ins -->
                <kindDef>Combat</kindDef>
                <commonality>100</commonality>
                <options>
                    <FRealms_HalflingTribes_Peasant>20</FRealms_HalflingTribes_Peasant>
                    <FRealms_HalflingTribes_Fighter>40</FRealms_HalflingTribes_Fighter>
                    <FRealms_HalflingTribes_Warrior>30</FRealms_HalflingTribes_Warrior>
                    <FRealms_HalflingTribes_Bowman>30</FRealms_HalflingTribes_Bowman>
                    <FRealms_HalflingTribes_Champion>30</FRealms_HalflingTribes_Champion>
                    <FRealms_HalflingTribes_Chief>10</FRealms_HalflingTribes_Chief>
                </options>
            </li>
            <li>
                <!-- Normal fights, ranged only -->
                <kindDef>Combat</kindDef>
                <commonality>60</commonality>
                <options>
                    <FRealms_HalflingTribes_Bowman>100</FRealms_HalflingTribes_Bowman>
                </options>
            </li>
            <li>
                <!-- Normal fights, melee only -->
                <kindDef>Combat</kindDef>
                <commonality>60</commonality>
                <options>
                    <FRealms_HalflingTribes_Peasant>15</FRealms_HalflingTribes_Peasant>
                    <FRealms_HalflingTribes_Fighter>40</FRealms_HalflingTribes_Fighter>
                    <FRealms_HalflingTribes_Warrior>40</FRealms_HalflingTribes_Warrior>
                    <FRealms_HalflingTribes_Champion>30</FRealms_HalflingTribes_Champion>
                    <FRealms_HalflingTribes_Chief>5</FRealms_HalflingTribes_Chief>
                </options>
            </li>
            <li>
                <!-- Peaceful -->
                <kindDef>Peaceful</kindDef>
                <options>
                    <FRealms_HalflingTribes_Fighter>30</FRealms_HalflingTribes_Fighter>
                    <FRealms_HalflingTribes_Warrior>30</FRealms_HalflingTribes_Warrior>
                    <FRealms_HalflingTribes_Bowman>30</FRealms_HalflingTribes_Bowman>
