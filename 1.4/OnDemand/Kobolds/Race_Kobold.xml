	<AlienRace.ThingDef_AlienRace ParentName="FRealms_HumanoidRaceBase">
		<defName>FRealms_Kobold</defName>
		<label>Kobold</label>
		<description>Aggressive, xenophobic, yet industrious small humanoid creatures, kobolds are noted for their skill at building traps and preparing ambushes.</description>
		<alienRace>
			<generalSettings>
				<disallowedTraits>
					<li><defName>Undergrounder</defName></li>
					<li><defName>Cannibal</defName></li>
					<li><defName>Psychopath</defName></li>
				</disallowedTraits>
				<alienPartGenerator>
					<useGenderedHeads>false</useGenderedHeads>
					<headTypes>
						<li>FRealms_KoboldNoHorns</li>
						<li>FRealms_KoboldTwoHorns</li>
						<li>FRealms_KoboldFourHorns</li>
					</headTypes>
					<bodyTypes>
						<li>Male</li>
						<li>Female</li>
						<li MayRequire="Ludeon.RimWorld.Biotech">Baby</li>
  						<li MayRequire="Ludeon.RimWorld.Biotech">Child</li>
					</bodyTypes>
                    <colorChannels>
                        <li>
                            <name>skin</name>
                            <first Class="ColorGenerator_Options">
                                <options>
                                    <!-- Blue Skins -->
                                    <li>
                                        <weight>10</weight>
                                        <only>RGB(64, 132, 165)</only>
                                    </li>
                                    <li>
                                        <weight>10</weight>
                                        <only>RGB(62, 86, 89)</only>
                                    </li>
                                    <li>
                                        <weight>10</weight>
                                        <only>RGB(106, 157, 162)</only>
                                    </li>
                                    <!-- Red Skins -->
                                    <li>
                                        <weight>10</weight>
                                        <only>RGB(114, 61, 61)</only>
                                    </li>
                                    <li>
                                        <weight>10</weight>
                                        <only>RGB(191, 66, 66)</only>
                                    </li>
                                    <li>
                                        <weight>10</weight>
                                        <only>RGB(140, 57, 57)</only>
                                    </li>
                                    <!-- Green Skins -->
                                    <li>
                                        <weight>10</weight>
                                        <only>RGB(121, 163, 107)</only>
                                    </li>
                                    <li>
                                        <weight>10</weight>
                                        <only>RGB(104, 186, 78)</only>
                                    </li>
                                    <li>
                                        <weight>10</weight>
                                        <only>RGB(74, 114, 61)</only>
                                    </li>
                                </options>
                            </first>
                        </li>
                    </colorChannels>
					<customDrawSize>(0.70, 0.70)</customDrawSize>
					<customHeadDrawSize>(0.70, 0.70)</customHeadDrawSize>
					<headOffset>(0.0, -0.1)</headOffset>
				</alienPartGenerator>
			</generalSettings>
			<graphicPaths>
				<li>
					<head>Pawn/Kobold/Head/</head>
				</li>
			</graphicPaths>
			<thoughtSettings>
				<cannotReceiveThoughts>
					<li>ObservedLayingCorpse</li>
					<li>EnvironmentDark</li>
					<li>NeedOutdoors</li>
					<li>DeadMansApparel</li>
					<li>KnowGuestExecuted</li>
					<li>KnowPrisonerDiedInnocent</li>
					<li>AteRawFood</li>
					<li>AteKibble</li>
					<li>AteCorpse</li>
					<li>AteHumanlikeMeatDirect</li>
					<li>AteHumanlikeMeatAsIngredient</li>
					<li>AteHumanlikeMeatAsIngredientCannibal</li>
					<li>AteInsectMeatDirect</li>
					<li>AteWithoutTable</li>
					<li>SleptOnGround</li>
					<li>KnowPrisonerSold</li>
					<li>KnowGuestOrganHarvested</li>
					<li>KnowColonistOrganHarvested</li>
					<li>SoakingWet</li>
					<li>KnowButcheredHumanlikeCorpse</li>
					<li>ButcheredHumanlikeCorpse</li>
					<li>WitnessedDeathNonAlly</li>
					<li>ColonistBanished</li>
					<li>ColonistBanishedToDie</li>
					<li>PrisonerBanishedToDie</li>
					<li>SharedBed</li>

					<li>ButcheredHumanlikeCorpseOpinion</li>
				</cannotReceiveThoughts>
			</thoughtSettings>
			<styleSettings>
				<li>
					<key>BeardDef</key>
					<value>
						<hasStyle>false</hasStyle>
					</value>
				</li>
				<li>
					<key>HairDef</key>
					<value>
						<hasStyle>false</hasStyle>
					</value>
				</li>
			</styleSettings>
		</alienRace>
		<statBases>
			<MoveSpeed>4.3</MoveSpeed>
			<Flammability>0.1</Flammability>
			<ComfyTemperatureMin>8</ComfyTemperatureMin>
			<ComfyTemperatureMax>28</ComfyTemperatureMax>
			<LeatherAmount>20</LeatherAmount>
			<ArmorRating_Blunt>0.20</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.35</ArmorRating_Sharp>
			<ArmorRating_Heat>0.15</ArmorRating_Heat>
			<WorkSpeedGlobal>1.2</WorkSpeedGlobal>
			<MiningSpeed>1.2</MiningSpeed>
		</statBases>
		<race>
			<fleshType>FRealms_NormalNoHediffs</fleshType>
			<leatherDef>Leather_Lizard</leatherDef>
			<baseBodySize>0.6</baseBodySize>
			<baseHealthScale>0.9</baseHealthScale>
			<hediffGiverSets>
				<li>FRealms_Kobold</li>
			</hediffGiverSets>
		</race>
		<comps>
			<li Class="TabulaRasa.CompProperties_AlienBodyCorrection">
				<maleBodyTypes>
					<li>Male</li>
				</maleBodyTypes>
				<femaleBodyTypes>
					<li>Female</li>
				</femaleBodyTypes>
			</li>
			<li MayRequire="Nals.FacialAnimation"><compClass>FacialAnimation.DrawFaceGraphicsComp</compClass></li>
			<li MayRequire="Nals.FacialAnimation"><compClass>FacialAnimation.HeadControllerComp</compClass></li>
			<li MayRequire="Nals.FacialAnimation"><compClass>FacialAnimation.EyeballControllerComp</compClass></li>
			<li MayRequire="Nals.FacialAnimation"><compClass>FacialAnimation.LidControllerComp</compClass></li>
			<li MayRequire="Nals.FacialAnimation"><compClass>FacialAnimation.BrowControllerComp</compClass></li>
			<li MayRequire="Nals.FacialAnimation"><compClass>FacialAnimation.SkinControllerComp</compClass></li>
			<li MayRequire="Nals.FacialAnimation"><compClass>FacialAnimation.FacialAnimationControllerComp</compClass></li>
		</comps>
