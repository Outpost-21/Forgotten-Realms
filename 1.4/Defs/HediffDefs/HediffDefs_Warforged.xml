<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
	<HediffGiverSetDef>
		<defName>Forgotten_Warforged</defName>
		<hediffGivers>
			<li Class="TabulaRasa.HediffGiver_Racial">
				<hediff>Forgotten_Warforged</hediff>
			</li>
		</hediffGivers>
	</HediffGiverSetDef>

	<HediffDef>
		<defName>Forgotten_Warforged</defName>
		<hediffClass>HediffWithComps</hediffClass>
		<label>Race: Warforged</label>
		<description><![CDATA[<i>Warforged are a sentient mechanical construct designed specifically for war, but many choose their own path.</i>
			
<b>Natural Armor</b>
- Blunt 40%
- Sharp 35%
- Heat 15%

<b>Stats</b>
- 0% Psychic Sensitivity
- 0% Toxic Sensitivity
- 160% Overall Health
- 120% Work Speed

<b>Extra Info</b>
- Requires no sleep
- Requires no food
- Automatically repairs any wound.]]></description>
		<defaultLabelColor>(0.6,0.85,0.91)</defaultLabelColor>
		<isBad>false</isBad>
		<scenarioCanAdd>false</scenarioCanAdd>
		<maxSeverity>1.0</maxSeverity>
		<stages>
			<li>
				<capMods />
			</li>
		</stages>
		<!-- <disablesNeeds>
			<li>Food</li>
			<li>Rest</li>
		</disablesNeeds> -->
		<comps>
			<li Class="TabulaRasa.HediffCompProperties_TooltipDescription" />
			<li Class="TabulaRasa.HediffCompProperties_AutoHeal">
				<healTicks>3000</healTicks>
                <cureTicks>500</cureTicks>
				<regrowParts>true</regrowParts>
                <removeInfections>true</removeInfections>
                <infectionsAllowed />
                <explicitRemovals>
                    <li>FibrousMechanites</li>
                    <li>SensoryMechanites</li>
                </explicitRemovals>
                <growthTicks>1000</growthTicks>
				<growthText>Growth: </growthText>
				<protoBodyPart>Forgotten_Warforged_ProtoBodypart</protoBodyPart>
				<curedBodyPart>Forgotten_Warforged_CuredBodypart</curedBodyPart>
			</li>
		</comps>
	</HediffDef>
	
	<HediffDef>
		<defName>Forgotten_Warforged_ProtoBodypart</defName>
		<label>reconstructing</label>
		<description>This body part is reconstructing, it will cause quite a bit of pain until it's done doing so.</description>
		<hediffClass>TabulaRasa.Hediff_GrowingPart</hediffClass>
		<defaultLabelColor>(0.59, 0.92, 0.69)</defaultLabelColor>
		<isBad>false</isBad>
		<addedPartProps>
			<partEfficiency>0.1</partEfficiency>
		</addedPartProps>
		<initialSeverity>0.0</initialSeverity>
		<maxSeverity>1.0</maxSeverity>
		<stages>
			<li>
				<minSeverity>0</minSeverity>
				<painOffset>0.2</painOffset>
			</li>
			<li>
				<minSeverity>0.3</minSeverity>
				<painOffset>0.15</painOffset>
			</li>
			<li>
				<minSeverity>0.6</minSeverity>
				<painOffset>0.1</painOffset>
			</li>
			<li>
				<minSeverity>0.9</minSeverity>
				<painOffset>0.05</painOffset>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_Immunizable">
				<!-- 
					Decides how fast the body part heals/grows
					- 0.07 is roughly a Quadrum (15 days)
					- Higher number is faster
				 -->
				<severityPerDayNotImmune>0.25</severityPerDayNotImmune> 
			</li>
		</comps>
		<modExtensions>
			<li Class="TabulaRasa.DefModExt_AutoHealProps">
				<autoHealHediff>Forgotten_Warforged</autoHealHediff>
				<growthText>Reassembly: </growthText>
				<curedBodyPart>Forgotten_Warforged_CuredBodypart</curedBodyPart>
			</li>
		</modExtensions>
	</HediffDef>
	
	<HediffDef>
		<defName>Forgotten_Warforged_CuredBodypart</defName>
		<label>completed part</label>
		<description>You should never actually see this info.</description>
		<hediffClass>TabulaRasa.Hediff_Removable</hediffClass>
		<defaultLabelColor>(1.0, 1.0, 1.0)</defaultLabelColor>
		<isBad>false</isBad>
		<initialSeverity>0.0</initialSeverity>
		<maxSeverity>1.0</maxSeverity>
		<stages>
			<li>
				<becomeVisible>false</becomeVisible>
			</li>
		</stages>
	</HediffDef>
	
</Defs>