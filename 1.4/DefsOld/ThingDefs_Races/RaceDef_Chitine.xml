<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<Asimov.PawnDef ParentName="Forgotten_HumanoidRaceBase">
		<defName>Forgotten_Chitine</defName>
		<label>Chitine</label>
		<description>A race of humanoids that resemble spiders and are typically found in the Underdark.</description>
		<pawnSettings>
			<!-- Body -->
			<headTypeWhitelist>
				<li>Forgotten_ChitineNormal</li>
			</headTypeWhitelist>
			<bodyTypeWhitelist>
				<li>Male</li>
				<li>Thin</li>
				<li MayRequire="Ludeon.RimWorld.Biotech">Baby</li>
				  <li MayRequire="Ludeon.RimWorld.Biotech">Child</li>
			</bodyTypeWhitelist>
			<bodyTypeWhitelistFemale>
				<li>Female</li>
				<li>Thin</li>
				<li MayRequire="Ludeon.RimWorld.Biotech">Baby</li>
				  <li MayRequire="Ludeon.RimWorld.Biotech">Child</li>
			</bodyTypeWhitelistFemale>
			<!-- Styles -->
			<allowHair>false</allowHair>
			<allowBeards>false</allowBeards>
			<allowTattoos>false</allowTattoos>
			<!-- Traits -->
			<traitBlacklist>
				<li>Undergrounder</li>
			</traitBlacklist>
			<!-- Thoughts -->
			<thoughtBlacklist>
				<li>ObservedLayingCorpse</li>
				<li>EnvironmentDark</li>
				<li>NeedOutdoors</li>
				<li>DeadMansApparel</li>
				<li>KnowGuestExecuted</li>
				<li>KnowPrisonerDiedInnocent</li>
				<li>AteRawFood</li>
				<li>AteWithoutTable</li>
				<li>KnowPrisonerSold</li>
				<li>KnowGuestOrganHarvested</li>
				<li>KnowColonistOrganHarvested</li>
				<li>KnowButcheredHumanlikeCorpse</li>
				<li>ButcheredHumanlikeCorpse</li>
				<li>WitnessedDeathNonAlly</li>
				<li>ColonistBanished</li>
				<li>ColonistBanishedToDie</li>
				<li>PrisonerBanishedToDie</li>
				<li>ButcheredHumanlikeCorpseOpinion</li>
			</thoughtBlacklist>
		</pawnSettings>
		<customGraphics>
			<shaderType>CutoutComplex</shaderType>
			<skinColorPairs>
				<li>
					<colorOne>(87, 87, 87)</colorOne>
					<weight>20</weight>
				</li>
				<li>
					<colorOne>(110, 110, 110)</colorOne>
					<weight>20</weight>
				</li>
				<li>
					<colorOne>(200, 200, 200)</colorOne>
					<weight>3</weight>
				</li>
			</skinColorPairs>
			<hairColorPairs>
				<li>
					<colorOne>(64, 64, 64)</colorOne>
					<weight>20</weight>
				</li>
				<li>
					<colorOne>(87, 87, 87)</colorOne>
					<weight>20</weight>
				</li>
				<li>
					<colorOne>(117, 117, 117)</colorOne>
					<weight>20</weight>
				</li>
				<li>
					<colorOne>(255, 255, 255)</colorOne>
					<weight>3</weight>
				</li>
			</hairColorPairs>
			<bodyAddons>
				<li>
					<texPath>Pawn/Chitine/Eyes/Eyes</texPath>
					<bodyPart>Head</bodyPart>
					<drawInBed>true</drawInBed>
					<shaderType>TransparentPostLight</shaderType>
					<colorPairs>
						<li>
							<colorOne>(255, 255, 255)</colorOne>
							<weight>100</weight>
						</li>
					</colorPairs>
					<drawLocation>HeadMiddle</drawLocation>
					<drawLayer>PostSkin</drawLayer>
				</li>
			</bodyAddons>
		</customGraphics>
		<statBases>
			<MoveSpeed>4.6</MoveSpeed>
			<Flammability>0.2</Flammability>
			<ComfyTemperatureMin>12</ComfyTemperatureMin>
			<ComfyTemperatureMax>40</ComfyTemperatureMax>
			<LeatherAmount>25</LeatherAmount>
            <MentalBreakThreshold>0.25</MentalBreakThreshold>
            <GlobalLearningFactor>0.8</GlobalLearningFactor>
            <NegotiationAbility>0.8</NegotiationAbility>
            <SocialImpact>0.8</SocialImpact>
		</statBases>
		<race>
			<fleshType>TabulaRasa_NormalNoHediffs</fleshType>
			<body>Forgotten_Chitine</body>
			<baseHealthScale>1.2</baseHealthScale>
			<hediffGiverSets>
				<li>Forgotten_Chitine</li>
			</hediffGiverSets>
		</race>
