<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="ForgottenRealms.PatchOperation_SettingActive">
		<settings>
			<li>raceToggle_illithid</li>
		</settings>
		<active Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="ForgottenRealms.PatchOperation_OnDemand">
					<source>1.4/OnDemand</source>
					<folders>
						<li>Illithids</li>
					</folders>
				</li>
				<li Class="PatchOperationAdd">
					<!-- Human Surgery -->
					<xpath>/Defs/ThingDef[defName="Human"]/recipes</xpath>
					<value>
						<li>FRealms_ImplantIllithidTadpole</li>
					</value>
				</li>
			</operations>
		</active>
	</Operation>

</Patch>